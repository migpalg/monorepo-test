{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "paths": {
      "@migpalg/core": ["packages/migpalg-core/lib"],
      "@migpalg/core/*": ["packages/migpalg-core/lib/*"],
      "@migpalg/pack": ["packages/migpalg-pack/lib"],
      "@migpalg/pack/*": ["packages/migpalg-pack/lib/*"]
    }
  },
  "exclude": ["**/.*/", "**/build", "**/node_modules"]
}
