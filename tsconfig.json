{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "paths": {}
  },
  "exclude": ["**/.*/", "**/build", "**/node_modules"]
}
